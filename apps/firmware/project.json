{
  "name": "firmware",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/firmware/src",
  "projectType": "application",
  "tags": ["platform:embedded"],
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pio run",
        "cwd": "apps/firmware"
      }
    },
    "upload": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pio run -t upload",
        "cwd": "apps/firmware"
      }
    },
    "monitor": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pio device monitor",
        "cwd": "apps/firmware"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pio run -t clean",
        "cwd": "apps/firmware"
      }
    }
  }
}
