{
  "name": "paperhome",
  "version": "0.1.0",
  "private": true,
  "description": "PaperHome - IoT Dashboard for ESP32 Smart Home Controller",
  "license": "MIT",
  "scripts": {
    "dev": "nx run-many -t serve -p api web",
    "build": "nx run-many -t build -p api web shared",
    "lint": "nx run-many -t lint",
    "typecheck": "nx run-many -t typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "api": "nx serve api",
    "web": "nx serve web",
    "firmware:build": "nx run firmware:build",
    "firmware:upload": "nx run firmware:upload",
    "firmware:monitor": "nx run firmware:monitor",
    "docker:up": "docker compose -f infrastructure/docker/docker-compose.yml up -d",
    "docker:up:tools": "docker compose -f infrastructure/docker/docker-compose.yml --profile tools up -d",
    "docker:down": "docker compose -f infrastructure/docker/docker-compose.yml --profile tools down",
    "docker:logs": "docker compose -f infrastructure/docker/docker-compose.yml logs -f",
    "docker:restart": "docker compose -f infrastructure/docker/docker-compose.yml restart",
    "start": "pnpm docker:up && pnpm dev",
    "migration:generate": "cd apps/api && npx typeorm-ts-node-commonjs migration:generate -d src/database/data-source.ts",
    "migration:run": "cd apps/api && npx typeorm-ts-node-commonjs migration:run -d src/database/data-source.ts",
    "migration:revert": "cd apps/api && npx typeorm-ts-node-commonjs migration:revert -d src/database/data-source.ts",
    "generate-api": "cd apps/web && npx orval"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.15.0",
  "devDependencies": {
    "@eslint/js": "^9.8.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
